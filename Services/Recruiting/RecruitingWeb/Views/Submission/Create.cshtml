@model ApplicationCore.Models.SubmissionRequestModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SubmissionRequestModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ResumeURL" class="control-label">Upload Resume</label>
                    <div class="custom-file">
                        <label class="form-label" for="formFile"></label>
                        <input type="file" class="form-control" id="formFile" asp-for="ResumeURL">
                    </div>
                    <span asp-validation-for="ResumeURL" class="text-danger"></span>
                </div>
            </form>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
